#!/usr/bin/env bash
set -ex
NAME=$1

if ! gluster volume list | grep -q $NAME; then
    gluster volume create $NAME \
            replica {{ glusterfs_replication }} \
            {% for server in groups[glusterfs_server_group] %}{{ server }}:{{ glusterfs_brick_location }}/$NAME {% endfor %}{% if glusterfs_volume_force == "yes" %}force{% endif %};
else
    echo "volume already created";
fi;
